{
    "name": "mscode-pl/laravel-react-email",
    "description": "Build Laravel mailables with react-email",
    "keywords": ["laravel", "react-email", "email", "mailable"],
    "homepage": "https://github.com/mscode-pl/laravel-react-email",
    "type": "library",
    "license": "MIT",
    "authors": [
      {
        "name": "Mateusz Sikorski",
        "email": "mateusz@mscode.pl"
      }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3|^8.4|^8.5",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.20 || ^8.0 || ^9.0 || ^10.0 || ^11.0",
        "pestphp/pest": "^1.20 || ^2.0 || ^3.0"
    },
    "autoload": {
        "psr-4": {
            "MsCodePL\\LaravelReactEmail\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MsCodePL\\LaravelReactEmail\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MsCodePL\\LaravelReactEmail\\LaravelReactEmailServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
